generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  
  // App specific
  ownedLeagues  League[]  @relation("LeagueOwner")
  memberships   LeagueMember[]
  bets          Bet[]
  notifications Notification[]
  propUpdates   PropUpdate[]
  comments      Comment[]
  activities    Activity[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model League {
  id              String       @id @default(cuid())
  name            String
  description     String?
  inviteCode      String       @unique @default(cuid())
  startingCredits Int          @default(1000)
  status          LeagueStatus @default(ACTIVE)
  mode            LeagueMode   @default(POOL)
  allowPropCreation Boolean    @default(true)
  showActivityFeed  Boolean    @default(true)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  ownerId         String
  owner           User         @relation("LeagueOwner", fields: [ownerId], references: [id])
  
  members         LeagueMember[]
  props           Prop[]
  activities      Activity[]
}

model LeagueMember {
  id        String   @id @default(cuid())
  leagueId  String
  userId    String
  credits   Int      @default(1000)
  joinedAt  DateTime @default(now())
  
  league    League   @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdProps Prop[] @relation("PropCreator")
  targetedProps Prop[] @relation("PropTarget")

  @@unique([leagueId, userId])
}

model Prop {
  id                 String     @id @default(cuid())
  leagueId           String
  creatorId          String
  type               PropType
  question           String
  wagerAmount        Int        @default(0)
  odds               Decimal?   @db.Decimal(10, 2)
  targetPlayerId     String?
  bettingDeadline    DateTime
  resolutionDeadline DateTime?
  winningSide        String?
  status             PropStatus @default(LIVE)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  league        League         @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  creator       LeagueMember   @relation("PropCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  targetPlayer  LeagueMember?  @relation("PropTarget", fields: [targetPlayerId], references: [id])
  
  bets      Bet[]
  updates   PropUpdate[]
  comments  Comment[]
}

model Bet {
  id        String   @id @default(cuid())
  propId    String
  userId    String
  amount    Int
  side      String   // "YES", "NO", "OVER", "UNDER"
  createdAt DateTime @default(now())
  
  prop      Prop     @relation(fields: [propId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Comment {
  id        String   @id @default(cuid())
  propId    String
  userId    String
  content   String
  createdAt DateTime @default(now())

  prop      Prop     @relation(fields: [propId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Activity {
  id        String       @id @default(cuid())
  leagueId  String
  userId    String
  type      ActivityType
  content   String
  createdAt DateTime     @default(now())

  league    League       @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PropUpdate {
  id        String   @id @default(cuid())
  propId    String
  userId    String
  content   String
  createdAt DateTime @default(now())
  
  prop      Prop     @relation(fields: [propId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum LeagueStatus {
  PRE_DRAFT
  ACTIVE
  COMPLETED
}

enum LeagueMode {
  POOL  // Fixed credits, zero-sum (poker-style)
  RANK  // Odds-based, unlimited credits (sportsbook-style)
}

enum PropType {
  HIT
  LINE
}

enum PropStatus {
  LIVE
  LOCKED
  RESOLVED
  CANCELED
}

enum ActivityType {
  JOIN
  CREATE_PROP
  BET
  WIN
  COMMENT
  ADMIN
}
